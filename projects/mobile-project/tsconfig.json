{
  "extends": "../../packages/tsconfig/base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-native",
    "baseUrl": "./",
    "paths": {
      "@law-manager/auth-client": [
        "../../packages/auth-client/src/index.tsx"
      ],
      "@law-manager/api-schema": [
        "../../packages/api-schema/src/index.ts"
      ],
      "@law-manager/api-schema/*": [
        "../../packages/api-schema/src/*"
      ]
    },
    "skipLibCheck": true
  },
  "include": [
    "App.tsx",
    "app.json",
    "types/**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
