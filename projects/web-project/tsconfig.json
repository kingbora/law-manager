{
  "extends": "../../packages/tsconfig/base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "lib": ["dom", "dom.iterable", "es2021"],
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["node", "react"],
    "allowImportingTsExtensions": false,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
