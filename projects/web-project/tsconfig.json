{
  "extends": "../../packages/tsconfig/base.json",
  "compilerOptions": {
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "es2021"],
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["node", "react"],
    "allowImportingTsExtensions": false,
    "isolatedModules": true,
    "baseUrl": "./",
    "moduleResolution": "Bundler",
    "paths": {
      "@law-manager/auth-client": ["../../packages/auth-client/src/index.tsx"],
      "@law-manager/api-schema": ["../../packages/api-schema/src/index.ts"],
      "@law-manager/api-schema/*": ["../../packages/api-schema/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
